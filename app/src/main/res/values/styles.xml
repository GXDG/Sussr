<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <!-- DialogFragment 全屏样式-->
    <style name="dialog_full_screen" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- 状态栏透明 -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent
        </item>
        <!-- colorPrimaryDark 透明 -->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!-- colorPrimary 透明 -->
        <item name="colorPrimary">@android:color/transparent</item>
        <!-- 导航栏透明 -->
        <item name="android:navigationBarColor" tools:targetApi="lollipop">
            @android:color/transparent
        </item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 不在Window上，全屏的关键-->
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="quick_btn">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_margin">80dp</item>
        <item name="android:background">@drawable/sl_btn_quick_menu</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
